<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane minWidth="0.0" text="History and Statistics Table" collapsible="false" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.statistics.StatisticsController">
    <content>
        <VBox spacing="5.0">
            <children>
                <TableView fx:id="statisticsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="runNumberColumn" prefWidth="50.0" text="Run #" />
                        <TableColumn fx:id="degreeColumn" prefWidth="60.0" text="Degree" />
                        <TableColumn fx:id="inputsColumn" prefWidth="120.0" text="Inputs" />
                        <TableColumn fx:id="outputYColumn" prefWidth="75.0" text="Output 'y'" />
                        <TableColumn fx:id="cyclesColumn" prefWidth="75.0" text="Cycles" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER" prefHeight="40.0" spacing="20.0">
                    <children>
                        <Button fx:id="showButton" mnemonicParsing="false" text="Show Full Results" />
                        <Button fx:id="rerunButton" mnemonicParsing="false" text="Re-run with Inputs" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </content>
</TitledPane>