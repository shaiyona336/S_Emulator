<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fxml.debugger.DebuggerPanelController"
      spacing="10" style="-fx-padding: 10;">

    <!-- Execution Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="startRegularButton" text="Start Regular" onAction="#handleStartRegular"/>
        <Button fx:id="startDebugButton" text="Start Debug" onAction="#handleStartDebug"/>
    </HBox>

    <!-- Debug Control Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="stepOverButton" text="Step Over" onAction="#handleStepOver"/>
        <Button fx:id="resumeButton" text="Resume" onAction="#handleResume"/>
        <Button fx:id="stopButton" text="Stop" onAction="#handleStop"/>
    </HBox>

    <Separator/>

    <!-- Input Variables -->
    <Label text="Execution Inputs:" style="-fx-font-weight: bold;"/>
    <ScrollPane fitToWidth="true" maxHeight="100">
        <GridPane fx:id="inputVariablesGrid" hgap="10" vgap="5">
            <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
        </GridPane>
    </ScrollPane>

    <Separator/>

    <!-- Variables Table -->
    <Label text="Variables:" style="-fx-font-weight: bold;"/>
    <TableView fx:id="variablesTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="variableNameColumn" text="Variable" prefWidth="100"/>
            <TableColumn fx:id="variableValueColumn" text="Value" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Cycles Display -->
    <Label fx:id="cyclesLabel" text="Cycles: 0" style="-fx-font-weight: bold;"/>
</VBox>